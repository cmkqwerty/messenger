{
    "require": {
        "slim/slim": "4.*",
        "slim/psr7": "^1.6",
        "php-di/php-di": "^7.0",
        "php": "^8.2",
        "ext-curl": "*",
        "ext-json": "*",
        "php-di/slim-bridge": "^3.4",
        "illuminate/support": "^10.28.0",
        "illuminate/database": "^10.0",
        "zeuxisoo/slim-whoops": "0.7.*",
        "vlucas/phpdotenv": "^5.5"
    },
    "autoload": {
        "files": [
            "./app/helpers.php"
        ],
        "psr-4": {
            "App\\": "app"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    }
}
